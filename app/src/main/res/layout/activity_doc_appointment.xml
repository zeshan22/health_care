<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/abs"
    android:layout_height="match_parent"
    tools:context=".docAppointment">

    <include layout="@layout/app_bar_layout" android:id="@+id/main_page_toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="10dp"
        android:orientation="vertical"
        >


        <TextView

            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Contact Information: patient01"
            android:fontFamily="sans-serif"
            android:textColor="@color/black_overlay"
            />



        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Date :16-07-19   Time: 04:20"
            android:fontFamily="sans-serif"
            android:textColor="@color/black_overlay"
            />






        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:textSize="20dp"
            android:text="Amount Paid."
            android:textColor="@color/black_overlay" />








        <Button

            android:id="@+id/connect02"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-40dp"
            android:layout_gravity="right"
            android:text="Connect"

            android:background="@color/colorAccent"
            android:textColor="@color/colorPrimary"


            />

    </LinearLayout>

</RelativeLayout>